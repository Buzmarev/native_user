AddDefaultCharset utf-8

php_value display_errors 1
php_value display_startup_errors 1
php_value error_reporting E_ALL

RewriteEngine on
RewriteBase /

RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d

RewriteRule ^(.*)$ index.php


